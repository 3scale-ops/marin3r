    "version": "0.2.0",
    "configurations": [
        {
            "name": "marin3r",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd",
            "cwd": "${workspaceRoot}",
            "env": {
                "KUBECONFIG": "tmp/kubeconfig"
            },
            "args": [
                "--namespace",
                "default",
                "--certificate",
                "certs/marin3r-server.crt",
                "--private-key",
                "certs/marin3r-server.key",
                "--ca",
                "certs/ca.crt",
                "--log-level",
                "debug",
                "--out-of-cluster"
            ]
        }
    ]
}